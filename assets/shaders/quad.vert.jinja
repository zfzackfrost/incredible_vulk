{% extends "lib/base_min.glsl.jinja" %}

{% block pre %}
vec2 positions[6] = vec2[](
    vec2(-1, -1),
    vec2(-1, 1),
    vec2(1, 1),

    vec2(1, 1),
    vec2(1, -1),
    vec2(-1, -1)
);
{% endblock %}

{% block io %}
layout (location = 0) out vec2 texCoords;
{% endblock %}

{% block main %}
gl_Position = vec4(positions[gl_VertexIndex], 0.0, 1.0);
texCoords = positions[gl_VertexIndex] * vec2(0.5) + vec2(0.5);
{% endblock %}
